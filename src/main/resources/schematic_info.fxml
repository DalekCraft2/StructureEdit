<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.dalekcraft.structureedit.ui.editor.SchematicInfoController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="%ui.editor.schematic.schematic_size" />
      <TextField fx:id="sizeTextField" centerShape="false" disable="true" editable="false" GridPane.columnIndex="1">
         <tooltip>
            <Tooltip text="%ui.editor.schematic.schematic_size.tooltip" />
         </tooltip>
      </TextField>
      <Label text="%ui.editor.schematic.schematic_offset" GridPane.rowIndex="1" />
      <TextField fx:id="offsetTextField" centerShape="false" disable="true" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <tooltip>
            <Tooltip text="%ui.editor.schematic.schematic_offset.tooltip" />
         </tooltip>
      </TextField>
      <Label text="%ui.editor.schematic.schematic_data_version" GridPane.rowIndex="2" />
      <TextField fx:id="dataVersionTextField" centerShape="false" disable="true" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <tooltip>
            <Tooltip text="%ui.editor.schematic.schematic_data_version.tooltip" />
         </tooltip>
      </TextField>
   </children>
</GridPane>
